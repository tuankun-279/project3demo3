@model Project_Real__estate.Models.AgentSellerView
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutSingle.cshtml";
}
<script src="~/scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/js/Login.js" type="text/javascript"></script>
<link href="~/css/Login.css" rel="stylesheet" />



<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Agent Login</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Seller Login</label>
        <div class="login-form">
            <div class="sign-in-htm">
                @using (Html.BeginForm("LoginAgent", "RegisterLoginView", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    if (ViewBag.Message != "")
                    {
                        <div class="text-danger">@ViewBag.Message</div>}
                    <div class="group">
                        @Html.Label("Email")
                        @Html.TextBox("AEmail", "", new { @class = "input", @placeholder = "Email" })
                    </div>
                    <div class="group">
                        @Html.Label("Password")
                        @Html.Password("APassword","", new { @class = "input", @placeholder = "Password" })
                    </div>
                    @*<div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> Keep me Signed in</label>
                        </div>*@
                    <div class="group">
                        <input type="submit" class="button" value="Sign In">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        @*<a href="#forgot">Forgot Password?</a>*@
                        <div class="small">@Html.ActionLink("Don't have account, register now", "Register", "RegisterLoginView")</div>
                    </div>
                }
            </div>
            <div class="sign-up-htm">
                @using (Html.BeginForm("LoginSeller", "RegisterLoginView", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    if (ViewBag.Message != "")
                    {
                        <div class="text-danger">@ViewBag.Message</div>}
                    <div class="group">
                        @Html.Label("Email")
                        @Html.TextBox("SEmail", "", new { @class = "input", @placeholder = "Email" })

                    </div>
                    <div class="group">
                        @Html.Label("Password")
                        @Html.Password("SPassword","", new { @class = "input", @placeholder = "Password" })
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Sign In">
                    </div>
                    
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <div class="small">@Html.ActionLink("Don't have account, register now", "Register", "RegisterLoginView")</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
